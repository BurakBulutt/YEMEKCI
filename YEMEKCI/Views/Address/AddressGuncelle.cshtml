@using YEMEKCI.Models
@model Address

@{
    ViewBag.Title = "Adres Güncelle";

}

<div style="margin: 40px 50px 0px 50px;">

    <h3 style="font-weight: 600; color:#f8a920; margin-bottom:20px">Adres Güncelle</h3>

    <form asp-action="/Address/AddressGuncelle" asp-route-id="@Model.ID" method="post">

        <div class="form-group" style="padding-bottom:30px">
            <label class="pb-1 fw-bold" for="name">Şehir:</label>
            <input type="text" class="form-control w-25" id="city" name="city" value="@Model.city">
        </div>

        <div class="form-group" style="padding-bottom:30px">
            <label class="pb-1 fw-bold" for="surname">İlçe:</label>
            <input type="text" class="form-control w-25" id="district" name="district" value="@Model.district">
        </div>

        <div class="form-group" style="padding-bottom:30px">
            <label class="pb-1 fw-bold" for="birthdate">Posta Kodu:</label>
            <input type="text" class="form-control w-25" id="postalCode" name="postalCode" value="@Model.postalCode">
        </div>

        <div class="form-group" style="padding-bottom:30px">
            <label class="pb-1 fw-bold" for="email">Açık Adres:</label>
            <input type="text" class="form-control w-50" id="address1" name="address1" value="@Model.address1">
        </div>

        <div class="form-group form-check">
        </div>
        <button type="submit" class="btn btn-success">Güncelle</button>

    </form>

</div>
