@using YEMEKCI.Models
@model Customer


@{
    ViewBag.Title = "CustomerSifreDegistirOnayla";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<div style="width:70%; margin:40px 0px 0px 50px; ">

    <h3 style="font-weight: 600; color:#f8a920; margin-bottom:20px">Şifre Değiştir</h3>

    @if (ViewBag.ErrorMessage != null)
    {
        <p style="color: red;">@ViewBag.ErrorMessage</p>
    }

    @using (Html.BeginForm("CustomerSifreDegistirOnayla", "Customer", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID)

        <div class="form-group">
            <label class="fw-semibold me-1">Yeni Şifre:</label>
            @Html.Password("yeniSifre")
        </div>

        <div class="form-group pt-3">
            <label class="fw-semibold me-1">Şifreyi Tekrar Gir:</label>
            @Html.Password("yeniSifreTekrar")
        </div>

        <div>
            <input style="margin-top:15px; font-size: 17px; background-color: darkslategrey; color: white;" class="rounded-3 px-3 py-1" type="submit" value="Degistir" />
        </div>
    }
</div>