@using YEMEKCI.Models
@model Payment
@{
    ViewBag.Title = "Ödeme Yöntemi Guncelle";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<h2>Payment Guncelle</h2>

<form asp-action="/Payment/PaymentGuncelle" asp-route-id="@Model.ID" method="post">

    <div class="form-group">
        <label for="name">İsim : </label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.name">
    </div>

    <div class="form-group form-check">
    </div>
    <button type="submit" class="btn btn-dark">Güncelle</button>

</form>

